#include <iostream>
using namespace std;
int main()
{
	int i,j,size,sum=0;
	cout << "Enter The Size of The Array" << "\n";
	cin >> size;
	int arr[size];
	cout << "Enter The Elements of Array " << "\n";
	for(i=0;i<size;i++)
	{
		cin >> arr[i];
	}
	for(j=0;j<size;j++)
	{
		sum=sum+arr[j];
	}
	cout << "Sum Of The Array -----> " << sum; 
	return 0;
}
