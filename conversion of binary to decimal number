#include <bits/stdc++.h>
#include <iostream>
using namespace std;
int main()
{
	int rem=0,b_sum,i,len,num;
	cout << "Enter The Binary Number = " ;
	cin >> num;
	i=0;
	while(num>0)
	{	
		rem=num%10;
		b_sum = b_sum + (rem*pow(2,i));	
		num=num/10;
		i++;
	}
	cout << "Decimal Number = " << b_sum;
	return 0;
}
